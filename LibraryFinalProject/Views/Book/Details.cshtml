@model BookAndGenreViewModel
@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center animated-title">Book Details</h1>

<div class="container mt-5 animated-container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card book-card animated-card">
                <div class="row">
                    <div class="col-md-4">
                        <img src="/Images/@Model.Book_Photo" alt="@Model.Title" class="img-fluid rounded" style="height:450px;width:350px">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h3 class="card-title">@Model.Title</h3>
                            <p><strong>Author:</strong> @Model.Author</p>
                            <p><strong>Description:</strong> @Model.Description</p>
                            <p><strong>ISBN:</strong> @Model.ISBN</p>
                            <p><strong>Publish Date:</strong> @Model.Publish_Date.ToString("MMMM dd, yyyy")</p>
                            <p><strong>Status:</strong> <b style="color:@Model.Availability_color">@Model.Availability_Status</b></p>
                            <p><strong>Genre:</strong> @Model.Genre_Name</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
        {
            <a asp-action="IndexForManagers" class="btn btn-primary btn-animated" style="width:200px">Back to List(M)</a>
        }
        <a asp-action="Index" class="btn btn-primary btn-animated" style="width:200px">Back to List</a>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #1e3a8a, #4f83cc, #001f3f);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: black;
    }

    .animated-title {
        animation: slideInFromTop 1.5s ease-out;
        color: #1e3a8a;
    }

    .container {
        max-width: 1200px;
    }

    .book-card {
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        background-color: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-bottom: 20px;
    }

    .book-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .card-body {
        font-size: 1.1rem;
    }

    .btn-animated {
        transition: background-color 0.3s ease, transform 0.2s ease;
        font-size: 1.1rem;
        border-radius: 5px;
        padding: 10px 20px;
    }

    .btn-primary.btn-animated {
        background-color: #4f83cc;
        border-color: #4f83cc;
        color: white;
    }

    .btn-primary.btn-animated:hover {
        background-color: #1e3a8a;
        transform: scale(1.05);
    }

    .btn-warning.btn-animated {
        background-color: #ffcc00;
        border-color: #ffcc00;
        color: white;
    }

    .btn-warning.btn-animated:hover {
        background-color: #e0a800;
        transform: scale(1.05);
    }

    .btn-outline-info.btn-animated:hover {
        background-color: #1e3a8a;
        color: white;
        transform: scale(1.05);
    }

    .animated-container {
        animation: fadeInUp 1.5s ease-in-out;
    }

    @@keyframes slideInFromTop {
        0% {
            transform: translateY(-100%);
        }
        100% {
            transform: translateY(0);
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
