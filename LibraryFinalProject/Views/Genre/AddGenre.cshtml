        margin-right: 10px;
    }

    a button {
        background-color: #4f83cc;
        border: none;
        color: white;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        a button:hover {
            background-color: #1e3a8a;
            transform: scale(1.05);
        }
</style>