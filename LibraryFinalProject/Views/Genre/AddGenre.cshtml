@model LibraryFinalProject.Models.Genre

@{
    ViewData["Title"] = "AddGenre";
}

<h1>AddGenre</h1>

<h4>Genre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGenre">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <center> <a asp-action="Index" class="btn btn-primary btn-animated" style="width:200px">Back to List</a></center>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>
    body {
        background: linear-gradient(to right, #1e3a8a, #4f83cc, #001f3f);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
    }

    h1, h4 {
        color: #1e3a8a;
    }

    .form-control.styled-input {
        border: 2px solid #4f83cc;
        transition: border-color 0.3s ease;
    }

        .form-control.styled-input:focus {
            border-color: #1e3a8a;
            box-shadow: 0 0 5px rgba(30, 58, 138, 0.5);
        }

