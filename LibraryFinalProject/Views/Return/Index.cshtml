@model List<ReturnViewModel>
@{
    ViewData["Title"] = "Return Index";
    int count = 0;
}

<h1 class="text-center animated fadeInUp title">Return Index</h1>

<a asp-action="AddReturn" class="btn btn-add-return animated fadeInUp">Add Return</a>

<table class="table table-bordered table-hover styled-table animated fadeInUp">
    <thead>
        <tr>
            <th>Count</th>
            <th>Return Date</th>
            <th>Book Title</th>
            <th>Member Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@(++count)</td>
                <td>@item.Return_Date</td>
                <td>@item.BookTitle</td>
                <td>@item.MemberName</td>
            </tr>
        }
    </tbody>
</table>

<!-- Add styles here -->
<style>
    body {
        background: linear-gradient(to right, #1e3a8a, #4f83cc, #001f3f);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
    }س

    .title {
        font-size: 2rem;
        color: #2e3d49;
        margin-bottom: 20px;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animated {
        opacity: 0;
        animation-duration: 1s;
        animation-fill-mode: forwards;
    }

    .fadeInUp {
        animation-name: fadeInUp;
    }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .styled-table th, .styled-table td {
        text-align: center;
        padding: 15px;
    }

    .styled-table th {
        background-color: #2e3d49;
        color: #fff;
    }

    .styled-table td {
        background-color: #f9f9f9;
    }

    .btn-add-return {
        background-color: #28a745;
        border-color: #28a745;
        color: white;
        margin-bottom: 20px;
        padding: 10px 20px;
        font-size: 1rem;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-add-return:hover {
        background-color: #218838;
        transform: scale(1.05);
    }
</style>
