@model LibraryFinalProject.ViewModel.CheckoutsViewModel

@{
    ViewData["Title"] = "Add";
    SelectList BookList = new SelectList(Model.books, "Id", "Title");
    SelectList MemberList = new SelectList(Model.members, "Id", "FullName");
    SelectList LibrarianList = new SelectList(Model.Librarians, "Id", "FullName");
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Checkout_Date" class="control-label"></label>
                <input asp-for="Checkout_Date" class="form-control styled-input" />
                <span asp-validation-for="Checkout_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Due_Date" class="control-label"></label>
                <input asp-for="Due_Date" class="form-control styled-input" />
                <span asp-validation-for="Due_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book_Id" class="control-label">Book</label>
                <select asp-for="Book_Id" class="form-control styled-input" asp-items="BookList">
                    <option>Select Book</option>
                </select>
                <span asp-validation-for="Book_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member_Id" class="control-label">Member</label>
                <select asp-for="Member_Id" class="form-control styled-input" asp-items="MemberList">
                    <option>Select Member</option>
                </select>
                <span asp-validation-for="Member_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Librarian_Id" class="control-label">Librarian</label>
                <select asp-for="Librarian_Id" class="form-control styled-input" asp-items="LibrarianList">
                    <option>Select Librarian</option>
                </select>
                <span asp-validation-for="Librarian_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary btn-animated" />
            </div>
        </form>
    </div>
</div>

<div>
    <center> <a asp-action="Index" class="btn btn-primary btn-animated" style="width:200px">Back to List</a></center>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background: linear-gradient(to right, #1e3a8a, #4f83cc, #001f3f);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
    }

    h1, h4 {
        color: #1e3a8a;
    }

    .form-control.styled-input {
        border: 2px solid #4f83cc;
        transition: border-color 0.3s ease;
    }

        .form-control.styled-input:focus {
            border-color: #1e3a8a;
            box-shadow: 0 0 5px rgba(30, 58, 138, 0.5);
        }

    .btn-primary.btn-animated {
        background-color: #4f83cc;
        border-color: #4f83cc;
        color: white;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-primary.btn-animated:hover {
            background-color: #1e3a8a;
            transform: scale(1.05);
        }

    .btn-primary {
        margin-right: 10px;
    }

    a button {
        background-color: #4f83cc;
        border: none;
        color: white;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        a button:hover {
            background-color: #1e3a8a;
            transform: scale(1.05);
        }
</style>
