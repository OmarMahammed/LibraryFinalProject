@model ApplicationUser

@{
    ViewData["Title"] = "ChangePassword";
}

<h1 class="text-center animated-title">Change Password</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="ChangePassword" asp-route-user="@Model.UserName" method="post" class="text-center animated-form">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group animated-input">
                <label for="OldPassword" class="control-label animated-label">Old Password</label>
                <input type="password" id="OldPassword" name="oldPassword" class="form-control styled-input" />
            </div>

            <div class="form-group animated-input">
                <label for="NewPassword" class="control-label animated-label">New Password</label>
                <input type="password" id="NewPassword" name="newPassword" class="form-control styled-input" />
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary btn-animated save-button" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" asp-controller="Book" class="btn btn-outline-info btn-animated">Back to List</a>
</div>

<style>
    body {
        background: linear-gradient(to right, #1e3a8a, #4f83cc, #001f3f);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: darkblue;
    }

    h1 {
        color: #1e3a8a;
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    .animated-title {
        animation: slideInFromTop 1.5s ease-out;
    }

    .form-control.styled-input {
        border: 2px solid #4f83cc;
        padding: 10px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        border-radius: 10px;
        background-color: #f0f8ff;
        font-size: 1rem;
        animation: inputFadeIn 1.2s ease;
    }

    .form-control.styled-input:focus {
        border-color: #1e3a8a;
        box-shadow: 0 0 10px rgba(30, 58, 138, 0.5);
        background-color: #e3f2fd;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .animated-input {
        animation: bounceIn 1.5s ease-in-out;
    }

    .animated-label {
        font-weight: bold;
        font-size: 1.1rem;
        transition: color 0.3s ease;
    }

    .animated-label:hover {
        color: #1e3a8a;
    }

    .btn-animated {
        transition: background-color 0.3s ease, transform 0.2s ease;
        font-size: 1.1rem;
        border-radius: 5px;
        padding: 10px 20px;
    }

    .save-button {
        background-color: #4f83cc;
        border-color: #4f83cc;
        color: white;
        animation: pulse 1.5s infinite;
    }

    .btn-primary.btn-animated:hover {
        background-color: #1e3a8a;
        transform: scale(1.1);
        box-shadow: 0 0 10px rgba(30, 58, 138, 0.5);
    }

    .btn-outline-info.btn-animated:hover {
        background-color: #1e3a8a;
        color: white;
        transform: scale(1.1);
        box-shadow: 0 0 10px rgba(30, 58, 138, 0.5);
    }

    .row {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        animation: slideInFromLeft 1s ease-out;
    }

    .col-md-4 {
        text-align: center;
        background-color: #ffffff;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease;
    }

    .col-md-4:hover {
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.2);
    }

    @@keyframes slideInFromTop {
        0% {
            transform: translateY(-100%);
        }
        100% {
            transform: translateY(0);
        }
    }

    @@keyframes slideInFromLeft {
        0% {
            transform: translateX(-100%);
        }
        100% {
            transform: translateX(0);
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @@keyframes bounceIn {
        0%, 20%, 40%, 60%, 80%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-15px);
        }
    }

    @@keyframes inputFadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.05);
        }
        100% {
            transform: scale(1);
        }
    }
</style>
