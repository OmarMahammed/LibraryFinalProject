@model LibraryFinalProject.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center animated fadeIn text-white">Login</h1>
<hr />
<div class="container mt-5 animated-container position-relative">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card login-card animated-card slide-in-left">
                <div class="card-body">
                    <form asp-action="Login" class="animated fadeIn">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="UserName" class="control-label">Username</label>
                            <input asp-for="UserName" class="form-control styled-input" placeholder="Enter Username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input asp-for="Password" class="form-control styled-input" placeholder="Enter Password" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                            </label>
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" value="Login" class="btn btn-primary btn-animated" />
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-action="Register" class="btn btn-primary btn-animated">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <img src="~/Images/Login1.png" class="floating-img img-left" alt="Image Left" />
    <img src="~/Images/Login2.png" class="floating-img img-right" alt="Image Right" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    body {
        background: linear-gradient(to right, #1e3a8a, #4f83cc, #001f3f);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
    }

    h1 {
        color: white; 
    }

    .animated {
        opacity: 0;
        animation-duration: 1s;
        animation-fill-mode: forwards;
    }

    .fadeIn {
        animation-name: fadeIn;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    .container {
        max-width: 900px;
        position: relative;
    }

    .login-card {
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        background-color: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        z-index: 1;
    }

    .login-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .card-body {
        font-size: 1.1rem;
    }

    .btn-primary {
        background-color: #4682B4;
        border-color: #4682B4;
        color: white;
    }

    .btn-primary:hover {
        background-color: #5F9EA0;
    }

    .form-control.styled-input {
        background-color: #E6F2FA;
        border-color: #A1CAF1;
        transition: border-color 0.3s ease;
    }

    .form-control.styled-input:focus {
        background-color: #D3EAF8;
        border-color: #89CFF0;
        box-shadow: 0 0 5px rgba(30, 58, 138, 0.5);
    }

    label {
        color: #4682B4;
    }

    .text-danger {
        color: #e74c3c;
    }

    .btn-animated {
        transition: background-color 0.3s ease, transform 0.2s ease;
        font-size: 1.1rem;
        border-radius: 5px;
        padding: 10px 20px;
    }

    .slide-in-left {
        opacity: 0;
        transform: translateX(-100%);
        animation: slideInLeft 1s forwards;
    }

    @@keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-100%);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .animated-container {
        animation: fadeInUp 1.5s ease-in-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .floating-img {
        width: 300px; /* تم زيادة الحجم إلى الضعف */
        position: absolute;
        animation: float 3s ease-in-out infinite; /* زادت السرعة */
    }

    .img-left {
        left: -25%; /* زيادة المسافة بين الصورتين */
        top: 50%;
        transform: translateY(-50%);
    }

    .img-right {
        right: -25%; /* زيادة المسافة بين الصورتين */
        top: 50%;
        transform: translateY(-50%);
    }

    @@keyframes float {
        0% {
            transform: translateY(-20px);
        }

        50% {
            transform: translateY(20px);
        }

        100% {
            transform: translateY(-20px);
        }
    }
</style>
